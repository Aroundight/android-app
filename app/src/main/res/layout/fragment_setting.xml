<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <one.mixin.android.widget.TitleView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleText="@string/setting_title"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_gray">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/default_margin"
                android:text="@string/setting_privacy_title"
                android:textColor="@color/text_gray"
                android:textSize="12sp"/>
    </FrameLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/divider"/>

    <RelativeLayout
            android:id="@+id/blocked_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_contact_height"
            android:background="@android:color/white"
            android:foreground="?attr/selectableItemBackground">

        <TextView
                android:id="@+id/blocked_tv"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="@string/setting_blocked"
                tools:ignore="RelativeOverlap"/>

        <ImageView
                android:id="@+id/blocked_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_chevron_right_gray_24dp"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/blocking_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_toStartOf="@id/blocked_iv"
                android:text="@string/none"
                android:textColor="@color/text_gray"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/divider"/>

    <RelativeLayout
            android:id="@+id/conversation_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_contact_height"
            android:layout_marginTop=".5dp"
            android:background="@android:color/white"
            android:foreground="?attr/selectableItemBackground">

        <TextView
                android:id="@+id/conversation_tv"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="@string/setting_conversation"
                tools:ignore="RelativeOverlap"/>

        <ImageView
                android:id="@+id/conversation_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_chevron_right_gray_24dp"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/conversation_source_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_toStartOf="@id/conversation_iv"
                android:text="@string/setting_my_contacts"
                android:textColor="@color/text_gray"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/divider"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_gray">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/default_margin"
                android:text="@string/setting_privacy_tip"
                android:textColor="@color/text_gray"
                android:textSize="12sp"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/divider"/>

    <RelativeLayout
            android:id="@+id/about_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_contact_height"
            android:background="@android:color/white"
            android:foreground="?attr/selectableItemBackground">

        <TextView
                android:id="@+id/about_tv"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="@string/about"
                tools:ignore="RelativeOverlap"/>

        <ImageView
                android:id="@+id/about_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_chevron_right_gray_24dp"
                tools:ignore="ContentDescription"/>
    </RelativeLayout>


    <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/divider"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray"/>
</LinearLayout>