<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="11.5dp"
        android:layout_marginStart="11.5dp"
        android:layout_marginTop="1.5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:maxWidth="280dp"
            android:ellipsize="end"
            android:gravity="start|top"
            android:lines="1"
            android:paddingBottom="4dp"
            android:textColor="#19BEF1"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="Jake Wharton" />

        <ImageView
            android:id="@+id/chat_sticker"
            android:layout_width="128dp"
            android:layout_height="128dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/chat_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:drawablePadding="3dp"
            android:fontFamily="@font/sf_pro_light"
            android:paddingEnd="6dp"
            android:textColor="@color/white"
            android:textSize="@dimen/chat_date_size"
            app:layout_constraintEnd_toEndOf="@id/chat_sticker"
            tools:text="7:48AM" />

    </LinearLayout>
</FrameLayout>